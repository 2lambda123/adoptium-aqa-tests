#!groovy
pipeline {
    agent {label 'linux&&x64&&test'}
    properties(
    	[
    		[
    			$class: 'ScannerJobProperty', doNotScan: false
    		], 
    		pipelineTriggers(
    			[
    				upstream(
    					threshold: <object of type hudson.model.Result>, 
    					upstreamProjects: 'openjdk_test_x86-64_linux'
    				)
    			]
    		)
    	]
    )
    environment {
                JAVA_BIN='$WORKSPACE/openjdkbinary/j2sdk-image/jre/bin'
                JCL_VERSION='current'
                OPENJDK_TEST='$WORKSPACE/openjdk-test'
                JAVA_VERSION='SE80'
                SPEC='linux_x86-64'
                }
    stages {
        stage('Setup') {
            steps {
				timestamps{
            		sh 'chmod 755 $OPENJDK_TEST/maketest.sh'
                	sh 'chmod 755 $OPENJDK_TEST/get.sh'
                	sh '$OPENJDK_TEST/get.sh $WORKSPACE $OPENJDK_TEST'
					}
                }
        }
        stage('BuildAndRun') {
            steps {
				timestamps{
                	echo 'Building and running tests...'
                	sh 'printenv'
                	sh '$OPENJDK_TEST/maketest.sh $OPENJDK_TEST'
					}
            }
        }
        stage('Deploy') {
            steps {
				timestamps {
                	echo 'Deploying....'
                	step([$class: "TapPublisher", testResults: "**/*.tap"])
                	archiveArtifacts artifacts: '**/*.tap', fingerprint: true
				}
            }
        }
    }
    post {
 		success {
 			deleteDir()
 		}
 	}
    
}
